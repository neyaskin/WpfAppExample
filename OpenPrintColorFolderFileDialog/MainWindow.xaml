<Window x:Class="OpenPrintColorFolderFileDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenPrintColorFolderFileDialog"
        mc:Ignorable="d"
        Title="File Dialogs" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical"
                    Grid.Column="1">
            <Button Content="Open file"
                    Name="OpenFileBtn"
                    Click="OpenFileBtn_Click"/>
            <Button Content="Print file"
                    Name="PrintFileBtn"
                    Click="PrintFileBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>

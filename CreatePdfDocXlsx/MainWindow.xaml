<Window x:Class="CreatePdfDocXlsx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreatePdfDocXlsx"
        mc:Ignorable="d"
        Title="" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical"
                    Margin="20"
                    VerticalAlignment="Center">
            <Button Content="Save to Pdf"
                    Margin="0 0 0 15"
                    Name="SaveToPdfBtn"
                    Click="SaveToPdfBtn_Click"/>
            <Button Content="Save to Doc"
                    Margin="0 0 0 15"
                    Name="SaveToDocBtn"
                    Click="SaveToDocBtn_Click"/>
            <Button Content="Save to Xlsx"
                    Margin=" 0 0 0 15"
                    Name="SaveToXlsxBtn"
                    Click="SaveToXlsxBtn_Click"/>
            <Button Content="Save to ..."
                    Name="SaveToBtn"
                    Click="SaveToBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
